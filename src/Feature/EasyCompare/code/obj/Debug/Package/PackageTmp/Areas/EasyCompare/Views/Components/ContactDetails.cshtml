                <div id="aaq_yes" ng-click="contact.IsSubscribeNewsPromo='yes'" ng-class="{'ec_radio_selected': contact.IsSubscribeNewsPromo=='yes'}" class="ec_radio_l">@Translate.TextByDomain(Constants.ContactListDomain, "form-subscribe-radio-option-yes")</div><div id="aaq_no" ng-click="contact.IsSubscribeNewsPromo='no'" ng-class="{'ec_radio_selected': contact.IsSubscribeNewsPromo=='no'}" class="ec_radio_r">@Translate.TextByDomain(Constants.ContactListDomain, "form-subscribe-radio-option-no")</div>


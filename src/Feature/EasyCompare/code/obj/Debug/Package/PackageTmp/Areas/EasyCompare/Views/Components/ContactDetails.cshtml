@using Sitecore.Feature.EasyCompare.Areas.EasyCompare
@model Sitecore.Feature.EasyCompare.Areas.EasyCompare.Models.ContactDetails
 @using Sitecore.Globalization
<div class="main-container">
    <ng-form name="carForm">
        <span class="policyform__title">@Translate.TextByDomain(Constants.ContactListDomain, "ContactDetails")</span>
        <div class="p-input-form firstquestion fullwidth">
            @*<div class="form-input-label">@Translate.TextByDomain(Constants.ContactListDomain, "Name")</div>*@
            <div class="input-container fullwidth">
                <input placeholder="@Translate.TextByDomain(Constants.ContactListDomain,"Name")" ng-class="{'inputerror': carForm.FirstName.$invalid && carForm.FirstName.$dirty}" name="FirstName" ng-model="contact.FirstName" class="form-input" type="text" required />
                @*<input placeholder="@Translate.TextByDomain(Constants.ContactListDomain,"Enter Your Last Name")" ng-model="contact.LastName" class="form-input" type="text" />*@
            </div>
        </div>
        <div class="p-input-form">
            @*<div class="form-input-label">@Translate.TextByDomain(Constants.ContactListDomain, "E-mail")</div>*@
            <div class="input-container fullwidth">
                <input placeholder="@Translate.TextByDomain(Constants.ContactListDomain,"E-mail")" ng-class="{'inputerror': carForm.Email.$invalid && carForm.Email.$dirty}" emailaddress name="Email" ng-model="contact.Email" class="form-input" type="text" required />
            </div>
        </div>
        <div class="p-input-form">
            @*<div class="form-input-label">@Translate.TextByDomain(Constants.ContactListDomain, "Phone Number")</div>*@
            <div class="input-container fullwidth">
                <input placeholder="@Translate.TextByDomain(Constants.ContactListDomain,"Phone Number")" ng-model="contact.Phone" class="form-input" type="text" />
            </div>
        </div>
        @*<div class="p-input-form">
            <div class="form-input-label">@Translate.TextByDomain(Constants.ContactListDomain, "Line ID")</div>
            <div class="input-container">
                <input placeholder="@Translate.TextByDomain(Constants.ContactListDomain,"Enter Your Line ID")" ng-model="contact.LineId" class="form-input" type="text" />
            </div>
        </div>*@
